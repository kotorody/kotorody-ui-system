{
  "typescript.validate.enable": true,
  "javascript.validate.enable": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["./src"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.stories.tsx": "typescriptreact"
  },
  "prettier.singleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "storybook.enableTelemetry": false,
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorCustomizations": {
    "statusBar.errorForeground": "#ff4785",
    "statusBarItem.errorBackground": "#ff4785",
    "statusBarItem.errorHoverBackground": "#ff79a7",
    "editorBracketHighlight.foreground1": "#8B0000", // 暗い赤
    "editorBracketHighlight.foreground2": "#CD853F", // 暗い橙
    "editorBracketHighlight.foreground3": "#DAA520", // 暗い黄
    "editorBracketHighlight.foreground4": "#228B22", // 暗い緑
    "editorBracketHighlight.foreground5": "#4169E1", // 暗い青
    "editorBracketHighlight.foreground6": "#8B008B" // 暗い紫
  },
  "editor.guides.bracketPairs": "active",
  // インデント編
  "indentRainbow.colors": [
    "rgba(128,  64,  64, 0.5)", // 赤
    "rgba(128,  96,  32, 0.5)", // 橙
    "rgba(128, 128,  32, 0.5)", // 黄
    "rgba( 32, 128,  32, 0.5)", // 緑
    "rgba( 32,  64, 128, 0.5)", // 青
    "rgba(128,  64, 128, 0.5)" // 紫
  ]
}
